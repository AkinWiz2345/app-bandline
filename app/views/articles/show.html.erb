<div class='container px-4 py-4'>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="text-center">
        <h1>記事の詳細</h1>
      </div>
    
      <div class='text-center py-4'>
        <div>
          <% if @article.image? %>
          <%= image_tag @article.image.url, class: "rounded img-fluid mx-auto", width: '200px' %>
          <% end %>
        </div>
        <% unless current_user == @article.user%>
          <%= render 'favorites/likes_button', article: @article %>
        <% end %>
      </div>
    
      <p class="border-bottom text-center"><%= @article.heading %></p>
      
        
      <dl class="px-5">
        <% case @article.kind %>
        <% when 'band' %>
          <dt class="text-left font-weight-normal">募集性別</dt>
          <dd class="pl-3 border"><%= @article.gender %></dd>
          <dt class="text-left font-weight-normal">募集年齢</dt>
          <dd class="pl-3 border"><%= @article.minimum_age%>〜<%= @article.maximum_age %></dd>
          <dt class="text-left font-weight-normal">活動エリア</dt>
          <dd class="pl-3 border"><%= @article.area %></dd>
          <dt class="text-left font-weight-normal mt-3">募集パート</dt>
        <% when 'member' %>
          <dt class="text-left font-weight-normal">性別</dt>
          <dd class="pl-3 border"><%= @article.gender %></dd>
          <dt class="text-left font-weight-normal">年齢</dt>
          <dd class="pl-3 border"><%= @article.age %>歳</dd>
          <dt class="text-left font-weight-normal">活動エリア</dt>
          <dd class="pl-3 border"><%= @article.area %></dd>
          <dt class="text-left font-weight-normal mt-3">担当パート</dt>
        <% end %>
        <dd class="pl-3 border">
          <% unless @parts.empty? %>
            <%= @parts.join('、') %>
          <% else %>
            指定なし
          <% end %>
        </dd>
        <dt class="text-left font-weight-normal mt-3">自己紹介文</dt>
        <dd class="text-left pl-3 border"><%= @article.introduction %></dd>
      </dl>
        
      
      <% if current_user == @article.user %>
        <div class="text-center mt-4">
          <%= link_to "記事を編集する", edit_article_path(@article), class: 'btn btn-big btn-secondary' %>
          <%= link_to "記事を削除する", @article, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-big btn-info ml-4'%>
        </div>
      <% else %>
        <div class="media ml-5 mt-4">
      	  <% if @article.user.image? %>
            <%= image_tag @article.user.image.url, class: "rounded img-fluid w-10 media-left", width: '50px' %>
          <% end %>
      	<div class="media-body text-left ml-3">
        	<h4 class="media-heading font-weight-normal"><%= @article.user.name %></h4>
        	<%= link_to "プロフィールを見る", user_path(@article.user) %>
      	</div>
      <% end %>
   
      </div>
      
    </div>
  </div>
</div>