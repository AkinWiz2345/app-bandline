<% if articles.any? %>
  <ul class="list-unstyled">
    <% articles.each do |article| %>
      <li class="media mb-3 border-bottom">
        <% if article.image? %>
          <%= image_tag article.image.url, class: "rounded img-fluid w-10", width: '50px' %>
        <% end %>
        <div class="media-body">
          <div>
            <% case article.kind %>
            <% when 'band' %>
              <span class="bg-primary text-white rounded-circle p-1">募</span>
            <% when 'member' %>
              <span class="bg-danger text-white rounded-circle p-1">加</span>
            <% end %>
          </div>
          <p><%= link_to article.heading, article, class: 'text-dark' %></p>
          <div>
          <%= link_to article.user.name, user_path(article.user) %> <span class="text-muted">投稿日時 <%= article.created_at %></span>
          </div>
        
        </div>
      </li>
    <% end %>
    <% unless current_page?(root_path) %>
      <%= paginate articles %>
    <% end %>
  </ul>
<% end %>