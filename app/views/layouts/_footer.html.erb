<footer class="bg-secondary mt-auto">
  <div class="d-flex justify-content-center">
    <div class="border-right my-3 px-2">
      <%= link_to 'トップページ', root_path, class: 'text-light' %>
    </div>
    <% if logged_in? %>
      <div class="my-3 px-2">
        <%= link_to 'ログアウト', logout_path, method: :delete, class: 'text-light' %>
      </div>
    <% else %>
      <div class="border-right my-3 px-2">
        <%= link_to 'ログイン', login_path, class: 'text-light' %>
      </div>
      <div class="my-3 px-2">
        <%= link_to '新規登録', signup_path, class: 'text-light' %>
      </div>
    <% end %>
  </div>
</footer>