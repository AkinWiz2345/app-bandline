<% unless article.user.id == current_user.id %>

  <% if current_user.like?(article) %>
    <%= form_with(model: current_user.favorites.find_by(article_id: article.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :article_id, article.id %>
      <%= f.submit '気になる(済)', class: 'btn btn-light btn-sm rounded-pill' %>
    <% end %>
    
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :article_id, article.id %>
      <%= f.submit '気になる', class: 'btn btn-warning btn-sm rounded-pill text-white' %>
    <% end %>
  <% end %>
  
<% end %>
